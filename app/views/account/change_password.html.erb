<div class="row mbottom30">
	<h2>Change Your Password</h2>
	<p>Please enter you old password, followed by your new password.</p>
	
	<%= form_tag send_change_password_path, class: "nice" do %>
		<p><%= label_tag 'old_pass', "Old Password" %>
			<%= password_field_tag 'old_pass', nil, class: "input-text", :placeholder => 'Enter old password' %></p>
		<p><%= label_tag 'new_pass', "New Password" %>
			<%= password_field_tag 'new_pass', nil, class: "input-text", :placeholder => 'Enter new password' %></p>
		<p><%= submit_tag "Change Password", class: "nice button radius small red" %> or <%= link_to "back to your account", account_path %></p>
	<% end %>
	
</div>