<div class="row mbottom30">
	<h2>Reset Your Password</h2>

	<p>Please enter the email address, you signed up to Little Busy Bees with, and we will send you a new password.</p>

	<%= form_tag send_new_password_path, class: "nice" do %>
		<p>
			<%= label_tag 'email' %>
			<%= text_field_tag 'email', nil, class: "input-text", :placeholder => 'Enter email address' %>
		</p>
		<p><%= submit_tag "Reset Password", class: "nice button radius small red" %></p>
	<% end %>


</div>